{
  "rules": {
    "rooms": {
      ".read": true,

      "$roomId": {
        ".write": "!data.exists() ? auth != null : true",

        "name": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "creatorId": {
          ".validate": "newData.isString()"
        },
        "isSecured": {
          ".validate": "newData.isBoolean()"
        },
        "pin": {
          ".validate": "newData.isString() && newData.val().length === 4"
        },
        "status": {
          ".validate": "newData.val() === 'open' || newData.val() === 'completed'"
        },

        "participants": {
          ".write": "data.parent().child('creatorId').val() === auth.uid || auth.token.email === 'amir.hilal@hilalpines.com'"
        },

        "assignments": {
          "$participantId": {
            ".write": true,
            ".validate": "newData.hasChildren(['participantId', 'targetId', 'assignedAt'])"
          }
        },

        "availableTargets": {
          "$targetId": {
            ".write": true,
            ".validate": "newData.isBoolean()"
          }
        }
      }
    }
  }
}
